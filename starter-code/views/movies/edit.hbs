<div class="containerr movieEdit-container">
  <h2>Edit {{movie.title}}</h2>
  <form method="POST" action="/movies/{{movie._id}}/edit">
    <div class="form-group">
      <label>Image</label>
      <input type="text" class="form-control" name="imgUrl" placeholder="https://pics.filmaffinity.com/groundhog_day-111669822-large.jpg" value="{{movie.imgUrl}}">
    </div>
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title" placeholder="Groundhog Day" value="{{movie.title}}">
    </div>
    <div class="form-group">
      <label>Genre</label>
      <input type="text" class="form-control" name="genre" placeholder="Comedy" value="{{movie.genre}}">
    </div>
    <div class="form-group">
      <label>Plot</label>
      <input type="text" class="form-control" name="plot" placeholder="A weatherman finds himself inexplicably living the same day over and over again." value="{{movie.plot}}">
    </div>
    <button class="btn btn-primary" type="submit">Edit movie</button>
  </form>
</div>
